
  <% if @article.errors.any? %>
    <div class="alert alert-danger" role="alert"><h4>The following errors prevented the Article from being created;</h4>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <%end %>
    </ul>
    </div>
  <% end %> 
    
<div class="row">
  <div class="col-xs-12">
    <%=form_for @article do |f| %>
      <div class="form-group">
        <div class="control-label" "col-sm-3">
          <%=f .label :title %>
        </div>
        <div class="control-label" "col-sm-9">
          <%=f .text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label" "col-sm-3">
          <%=f .label :description %>
        </div>
        <div class="control-label" "col-sm-9">
          <%=f .text_area :description, class: "form-control", placeholder: "Description of Article", rows: "10" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-9 col-sm-3">
          <%=f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>

      <%=link_to "[Cancel Request and Back to articles listing]", articles_path %>
    <% end %>
  </div>
</div>
