<%= render "shared/errors", obj: @user %>
    
<div class="row">
  <div class="col-xs-12">
    <%=form_for @user do |f| %>
      <div class="form-group">
        <div class="control-label" "col-sm-3">
          <%=f.label :username %>
        </div>
        <div class="control-label" "col-sm-9">
          <%=f.text_field :username, class: "form-control", placeholder: "Enter user name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label" "col-sm-3">
          <%=f.label :email %>
        </div>
        <div class="control-label" "col-sm-9">
          <%=f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label" "col-sm-3">
          <%=f.label :password %>
        </div>
        <div class="control-label" "col-sm-9">
          <%=f.password_field :password, class: "form-control", placeholder: "Enter password"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-9 col-sm-3">
          <%=f.submit (@user.new_record? ? "Sign Up" : "Update Account"), class: "btn btn-primary btn-lg" %>
        </div>
      </div>

      <%=link_to "[Cancel Request and Back to articles listing]", articles_path %>
    <% end %>
  </div>
</div>
