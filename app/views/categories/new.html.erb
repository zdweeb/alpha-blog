<h1 align="center">Create a new Category</h1>

<%= render 'shared/errors', obj: @category %>
    

<%=form_for @category do |f| %>
  <div class="form-group">
    <div class="control-label" "col-sm-3">
      <%=f.label :name %>
    </div>
    <div class="control-label" "col-sm-9">
      <%=f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-9 col-sm-3">
      <%=f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>

  <%=link_to "[Cancel Request and Back to articles listing]", articles_path %>
<% end %>
