<div class= "container">
  <div class="header clearfix">
    <nav>
      <ul class="nav nav-pills pull-right">
        <li class="<%= active_class(root_path) %>" role="presentation"><%= link_to 'Home', root_path %></li>
        <li class="<%= active_class(articles_path) %>" role="presentation"><%= link_to 'Articles', articles_path %></li>
        <% if logged_in? %>
          <li class="<%= active_class(new_article_path) %>" role="presentation"><%= link_to "Create new article", new_article_path %></li>
        <% end %>
        <li class="<%= active_class(users_path ) %>" role="presentation"><%= link_to 'Users', users_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User Profile
            <%= "(Admin)" if current_user.admin? %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit user profile", edit_user_path(current_user) %></li>
              <li><%= link_to "View user profile", user_path(current_user) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Users', users_path %></li>
            </ul>
          </li>
          <li><span class="glyphicon glyphicon-off glyph" aria-hidden="true"></span></li>
         <li role="presentation"><%= link_to "Logout", logout_path, method: :delete %></li>
        <% else %>
          <li><span class="glyphicon glyphicon-user glyph" aria-hidden="true"></span></li>        
          <li role="presentation"><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>
    </nav>
    
    <h2 class="text-primary" id="logo"><%= link_to 'Alpha Blog', root_path %></h2>
  </div>
</div>

